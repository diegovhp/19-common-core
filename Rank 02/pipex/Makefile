	printf "\033[38;2;241;178;172m"; \
	for c in "ğŸ§¹" " " "F" "u" "l" "l" "y" " " "c" "l" "e" "a" "n" "i" "n" "g" " " "ğŸ§¹"; do \
		printf "$$c"; \
		sleep 0.03; \
	done; \
	\
	printf "\n\n\033[38;2;241;178;172mâ•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®\n"; \
	printf " \033[38;2;241;178;172mâ”‚\033[38;2;125;120;163m"; \
	i=0; \
	while [ $$i -le 40 ]; do \
		sleep 0.01; \
		printf "â–ˆ"; \
		i=$$((i + 1)); \
	done; \
	printf "\033[38;2;241;178;172mâ”‚\n"; \
	printf "â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯\033[0m\n"; \
