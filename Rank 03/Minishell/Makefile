NAME		= minishell

CC			= cc
CFLAGS		= -Werror -Wextra -Wall -gdwarf-4 -g
rm			= rm -f

LIBFT		= ./libft/libft.a
SRC_DIR		= sources/
OBJ_DIR 	= objects/
LIBFT_DIR 	= ./libft/
INC_DIR 	= includes/

INC			= -I $(INC_DIR) -I $(LIBFT_DIR)

SRCS		= 	$(SRC_DIR)main.c \
				$(SRC_DIR)utils/init_data.c \
				$(SRC_DIR)environment/env_utils.c \
				$(SRC_DIR)environment/env_edit.c \
				$(SRC_DIR)environment/env_core.c \
				$(SRC_DIR)lexer/parse_user_input.c \
				$(SRC_DIR)lexer/tokenization.c \
				$(SRC_DIR)lexer/tokenization_utils.c \
				$(SRC_DIR)lexer/check_if_var.c \
				$(SRC_DIR)lexer/lexer_grammar.c \
				$(SRC_DIR)lexer/token_lst_utils.c \
				$(SRC_DIR)lexer/token_lst_utils_2.c \
				$(SRC_DIR)expansion/var_expander.c \
				$(SRC_DIR)expansion/var_expander_utils.c \
				$(SRC_DIR)expansion/identify_var.c \
				$(SRC_DIR)expansion/quotes_handler.c \
				$(SRC_DIR)expansion/quotes_remover.c \
				$(SRC_DIR)expansion/recover_value.c \
				$(SRC_DIR)expansion/replace_var.c \
				$(SRC_DIR)parsing/create_commands.c \
				$(SRC_DIR)parsing/fill_args_echo.c \
				$(SRC_DIR)parsing/fill_args_echo_utils.c \
				$(SRC_DIR)parsing/fill_args_default.c \
				$(SRC_DIR)parsing/parsing_core1.c \
				$(SRC_DIR)parsing/parsing_core2.c \
				$(SRC_DIR)parsing/parsing_core2_utils.c \
				$(SRC_DIR)parsing/parsing_core3.c \
				$(SRC_DIR)parsing/parsing_core4.c \
				$(SRC_DIR)parsing/cmd_lst_utils.c \
				$(SRC_DIR)parsing/cmd_lst_utils_cleanup.c \
				$(SRC_DIR)builtins_cmds/export_builtin.c \
				$(SRC_DIR)builtins_cmds/unset_builtin.c \
				$(SRC_DIR)builtins_cmds/cd_builtin.c \
				$(SRC_DIR)builtins_cmds/env_builtin.c \
				$(SRC_DIR)builtins_cmds/pwd_builtin.c \
				$(SRC_DIR)builtins_cmds/echo_builtin.c \
				$(SRC_DIR)builtins_cmds/exit_builtin.c \
				$(SRC_DIR)exec/execute.c \
				$(SRC_DIR)exec/execute_cmd.c \
				$(SRC_DIR)exec/execute_utils.c \
				$(SRC_DIR)exec/parse_path.c \
				$(SRC_DIR)redirect/pipe.c \
				$(SRC_DIR)redirect/file_io.c \
				$(SRC_DIR)utils/exit.c \
				$(SRC_DIR)utils/error.c \
				$(SRC_DIR)utils/cleanup.c \
				$(SRC_DIR)signal/signal.c 

OBJ 		= $(patsubst $(SRC_DIR)%.c,$(OBJ_DIR)%.o,$(SRCS))

start:
					@make all --no-print-directory

$(LIBFT):
					@make -C $(LIBFT_DIR) --no-print-directory --silent

all: 				logo $(NAME)

logo:
	@tput civis
	@printf "\033[38;2;241;178;172m"; \
	for c in "W" "e" "l" "c" "o" "m" "e" " " "t" "o" " " "D" "i" "e" "g" "o" "'" "s" " " "&" " " "T" "o" "m" "'" "s"; do \
		printf "$$c"; \
		sleep 0.08; \
	done; \
	printf "\n\n"; \
	{ \
	echo "\033[38;2;162;156;187m		     :::       :::    :::    :::     :::    :::    ::::::::    :::    :::    :::::::::    :::         :::"; \
	echo "\033[38;2;125;120;163m	            :+::     :::+    :+:    :+::    :+:    :+:   :+:    :+:   :+:    :+:    :+:          :+:         :+:"; \
	echo "\033[38;2;162;156;187m	           +:+++  +++:++    +:+    +:+++   +:+    +:+   +:+          +:+    +:+    +:+          +:+         +:+"; \
	echo "\033[38;2;125;120;163m	          +#+  +++  #++    +#+    +#+ ++  +#+    +#+   #++:++#++    +#++:++#++    +#++:++#+    +#+         +#+"; \
	echo "\033[38;2;162;156;187m	         +#+       +#+    +#+    +#+  ++ +#+    +#+         +#+    +#+    +#+    +#+          +#+         +#+"; \
	echo "\033[38;2;125;120;163m	        #+#       #+#    #+#    #+#   ++#+#    #+#    #+#   #+#   #+#    #+#    #+#          #+#         #+#"; \
	echo "\033[38;2;162;156;187m	       ###       ###    ###    ###    +###    ###    ########    ###    ###    #########    ########    ########"; \
	} | while IFS= read -r line; do \
		printf "$$line\n"; \
		sleep 0.05; \
	done; \
	printf "\033[0m\n"; \
	tput cnorm

progress_bar:
	@tput civis
	@printf "\n\033[38;2;241;178;172m╭────────────────────────────────────────────╮\n"
	@printf " \033[38;2;241;178;172m│\033[38;2;125;120;163m"
	@i=0; \
	while [ $$i -le 40 ]; do \
		sleep 0.06; \
		printf "█"; \
		i=$$((i + 1)); \
	done; \
	printf "\033[38;2;241;178;172m│\n"; \
	printf "╰────────────────────────────────────────────╯\033[0m\n"; \
	tput cnorm


GLOSSY_GRAPE = \033[38;2;162;156;187m
RHYTHM       = \033[38;2;125;120;163m
MELON        = \033[38;2;241;178;172m
RESET        = \033[0m

$(NAME): $(OBJ) $(LIBFT)
	@$(CC) $(CFLAGS) $(OBJ) $(LIBFT) -l readline -o $(NAME) $(INC)
	@$(MAKE) progress_bar --no-print-directory

$(OBJ_DIR)%.o:		$(SRC_DIR)%.c
					@mkdir -p $(@D)
					@$(CC) $(CFLAGS) -c $< -o $@ $(INC)

clean:
	@tput civis; \
	printf "\033[38;2;241;178;172m"; \
	for c in "🧹" " " "C" "l" "e" "a" "n" "i" "n" "g" " " "🧹"; do \
		printf "$$c"; \
		sleep 0.08; \
	done; \
	\
	printf "\n\n\033[38;2;241;178;172m╭────────────────────────────────────────────╮\n"; \
	printf " \033[38;2;241;178;172m│\033[38;2;125;120;163m"; \
	i=0; \
	while [ $$i -le 40 ]; do \
		sleep 0.06; \
		printf "█"; \
		i=$$((i + 1)); \
	done; \
	printf "\033[38;2;241;178;172m│\n"; \
	printf "╰────────────────────────────────────────────╯\033[0m\n"; \
	tput cnorm
	@$(RM) -r $(OBJ_DIR)
	@make clean -C ./libft --no-print-directory > /dev/null

fclean:
	@tput civis; \
	printf "\033[38;2;241;178;172m"; \
	for c in "🧹" " " "F" "u" "l" "l" "y" " " "c" "l" "e" "a" "n" "i" "n" "g" " " "🧹"; do \
		printf "$$c"; \
		sleep 0.08; \
	done; \
	\
	printf "\n\n\033[38;2;241;178;172m╭────────────────────────────────────────────╮\n"; \
	printf " \033[38;2;241;178;172m│\033[38;2;125;120;163m"; \
	i=0; \
	while [ $$i -le 40 ]; do \
		sleep 0.06; \
		printf "█"; \
		i=$$((i + 1)); \
	done; \
	printf "\033[38;2;241;178;172m│\n"; \
	printf "╰────────────────────────────────────────────╯\033[0m\n"; \
	printf "\n\n\033[38;2;241;178;172m"; \
	for c in "✅" " " "D" "o" "n" "e" " " "✅"; do \
		printf "$$c"; \
		sleep 0.08; \
	done; \
	printf "\n"; \
	tput cnorm
	@$(RM) -r $(OBJ_DIR)
	@$(RM) $(NAME)
	@$(RM) $(LIBFT)
	@make fclean -C ./libft --no-print-directory > /dev/null

re:
	@tput civis; \
	printf "\033[38;2;241;178;172m"; \
	for c in "🔁" " " "R" "e" "-" "M" "a" "k" "i" "n" "g" "." "." "."; do \
		printf "$$c"; \
		sleep 0.08; \
	done; \
	\
	printf "\n\n\033[38;2;241;178;172m╭────────────────────────────────────────────╮\n"; \
	printf " \033[38;2;241;178;172m│\033[38;2;125;120;163m"; \
	i=0; \
	while [ $$i -le 40 ]; do \
		sleep 0.06; \
		printf "█"; \
		i=$$((i + 1)); \
	done; \
	printf "\033[38;2;241;178;172m│\n"; \
	printf "╰────────────────────────────────────────────╯\033[0m\n"; \
	tput cnorm
	@$(MAKE) fclean --no-print-directory
	@$(MAKE) all --no-print-directory

.PHONY: start all re clean fclean logo
